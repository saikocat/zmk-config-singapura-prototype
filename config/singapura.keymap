    keymap {
        compatible = "zmk,keymap";

        layer_base {
            label = "BASE";
            bindings = <
&gqt LS(LG(NUMBER_4)) Q             &kp W     &kp E              &kp R  &gqt LG(LS(T)) T     &kp Y      &kp U     &kp I     &kp O      &kp P
                  &kp A             &kp S     &kp D              &kp F             &kp G     &kp H      &kp J     &kp K     &kp L      &mo 2
        &gqt LEFT_ALT Z  &gqt LG(LS(X)) X     &kp C              &kp V             &kp B     &kp N      &kp M  &kp LEFT  &kp DOWN  &kp RIGHT
